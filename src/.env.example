# SnapCap Environment Variables
# Copy this file to .env.local and update with your values

# Google Maps API Key (Optional - for enhanced map features)
# Get from: https://console.cloud.google.com/
# Enable: Maps JavaScript API, Places API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Unsplash API Access Key (Optional - for stock photos)
# Get from: https://unsplash.com/developers
VITE_UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# Demo Mode (true = use placeholder data, false = require API keys)
VITE_DEMO_MODE=true

# App Configuration
VITE_APP_URL=http://localhost:3000
VITE_APP_NAME=SnapCap

# Development Settings
VITE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=false

# Social Features (Optional)
VITE_ENABLE_CHAT=true
VITE_ENABLE_STORIES=true
VITE_ENABLE_DUETS=true

# Performance Settings
VITE_IMAGE_OPTIMIZATION=true
VITE_LAZY_LOADING=true